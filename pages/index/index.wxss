.weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}
.weather-bg{
  position: absolute;
  background: #ccc;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1
}
.temp{
  text-align: center;
  font-size: 120rpx;
  line-height: 280rpx;
  opacity: .8
}
.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: .65
}
.forecast-list{
  display: flex;
  align-items:center
}
.forecast-item{
  flex: 1;
  text-align: center;
  border-right: 1px solid rgba(255, 255, 255, .9)
}
.forecast-item:last-child{
  border: none
}
.forecast-item-title,.forecast-item-content{
  display: block;
  width: 100%;
  
}
.forecast-item-title{
  font-size: 40rpx;
  color: rgba(0, 0, 0, .6);
   line-height: 80rpx
}
.forecast-item-content{
  font-size: 37rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, .5);
  padding-bottom: 15rpx
}
.tipBar{
  margin-top: 40rpx
}
.tip-titleBar{
  position: relative;
  width: 100%;
  height: 70rpx;
 
  
}
.tip-titleBar::after{
  content: '';
  display: block;
  clear: both;
  position: absolute;
  height: 1rpx;
  bottom: -8rpx;
  left:15rpx;
  right: 15rpx;
  background: #ccc;
}
.tip-titleBar-img{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 3rpx;
  top: 0
  
}
.tip-title{
  display: inline-block;
  font-size: 45rpx;
  line-height: 70rpx;
  text-indent: 73rpx;
  color: rgba(0, 0, 0, .8)
}
.tip-content{
  padding: 20rpx 10rpx 0;
  display: inline-block;
  font-size: 35rpx;
  font-weight: 100;
  text-indent: 70rpx;
  line-height: 55rpx;

}